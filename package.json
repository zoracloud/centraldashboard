{
  "name": "centraldashboard",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "https://github.com/zoracloud/centraldashboard.git",
  "author": "rflowplatform@gmail.com <allankiplangat22@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack && npm run tslint && npm run build-ts",
    "build-webpack": "webpack",
    "debug": "yarn run build && yarn run watch-debug",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Webpack,TypeScript,Express\" -c \"green.bold,yellow.bold,cyan.bold\" \"webpack-dev-server\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "dev-debug": "concurrently -k -p \"[{name}]\" -n \"Webpack,TypeScript,Express\" -c \"green.bold,yellow.bold,cyan.bold\" \"webpack-dev-server\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "dev-server-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Express\" -c \"yellow.bold,cyan.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "build-ts": "tsc",
    "test-client": "karma start --single-run",
    "test-client-debug": "karma start --browsers Chrome",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test-e2e": "ts-node --transpile-only node_modules/jasmine/bin/jasmine --config=test/.jasmine.json --reporter=jasmine-console-reporter",
    "test-server": "ts-node --transpile-only node_modules/jasmine/bin/jasmine --config=app/.jasmine.json --reporter=jasmine-console-reporter",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w"
  },
  "volta": {
    "node": "14.17.6",
    "yarn": "1.22.11"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "cross-env": "^5.2.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "nodemon": "^1.19.3",
    "webpack-dev-server": "^3.8.2",
    "jasmine": "^3.5.0",
    "jasmine-ajax": "^3.4.0",
    "jasmine-console-reporter": "^3.1.0",
    "ts-node": "^8.4.1",
    "karma": "^4.3.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "istanbul-instrumenter-loader": "^3.0.1",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^5.1.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "script-ext-html-webpack-plugin": "^2.1.4"
  }
}
